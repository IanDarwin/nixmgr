<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.1.xsd"
      no-conversation-view-id="/UserInRoleList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{userInRoleHome.wire}"/>

   <param name="userInRoleFrom"/>
   <param name="userInRoleId" value="#{userInRoleHome.userInRoleId}"/>
   <param name="accountFrom"/>
   <param name="accountId" value="#{accountHome.accountId}"/>

   <param name="userroleFrom"/>
   <param name="userroleId" value="#{userroleHome.userroleId}"/>



   <navigation from-action="#{userInRoleHome.persist}">
      <rule>
         <end-conversation/>
         <redirect view-id="/UserInRole.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{userInRoleHome.update}">
      <rule>
         <end-conversation/>
         <redirect view-id="/UserInRole.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{userInRoleHome.remove}">
      <rule>
         <end-conversation/>
         <redirect view-id="/UserInRoleList.xhtml"/>
      </rule>
   </navigation>

</page>
